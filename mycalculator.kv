<MyButton@Button>:
    font_size:40
    background_color:0,1,0,0.5
	markup:True
<MainLayout>:
    id:calculator
    display:input
    rows:5
    padding:10
    spacing:10
    canvas:
        Color:
            rgba:0.2,0.8,0.2,1
        Rectangle:
            pos:self.pos
            size:self.size
    BoxLayout:
        TextInput:
            id:input
			hint_text:'ASO Calculator V:1.0.0'
            font_size:50
            multiline:False
    BoxLayout:
        spacing:10
        MyButton:
            text:"7"
            on_press:input.text += "7"
        MyButton:
            text:"8"
            on_press:input.text += "8"
        MyButton:
            text:"9"
            on_press:input.text += "9"
        MyButton:
            text:"+"
            on_press:input.text += "+"
    BoxLayout:
        spacing:10
        MyButton:
            text:"4"
            on_press:input.text += "4"
        MyButton:
            text:"5"
            on_press:input.text += "5"
        MyButton:
            text:"6"
            on_press:input.text += "6"
        MyButton:
            text:"â€”"
            on_press:input.text += "-"
    BoxLayout:    
        spacing:10
        MyButton:
            text:"1"
            on_press:input.text += "1"
        MyButton:
            text:"2"
            on_press:input.text += "2"
        MyButton:
            text:"3"
            on_press:input.text += "3"
        MyButton:
            text:"*"
            on_press:input.text += "*"
    BoxLayout:
        spacing:10
        MyButton:
            text:"CLS"
            on_press:input.text = ""
        MyButton:
            text:"0"
            on_press:input.text += "0"
        MyButton:
            text:"="
            on_press:calculator.calc(input.text)
        MyButton:
            text:"/"
            on_press:input.text += "/"